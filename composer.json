{
    "description": "The CodeIgniter framework with core custom",
    "name": "ngthuc/ci-custom-core",
    "type": "project",
    "keywords": ["ngthuc","ci-custom-core","codeigniter","custom"],
    "homepage": "https://ngthucdotcom.github.io/ci-custom-core/",
    "license": "MIT",
    "authors": [
        {
            "name": "Nguyen Thuc",
            "email": "contact@ngthuc.com",
            "homepage": "https://ngthuc.com",
            "role": "Developer"
        },
        {
            "name": "EllisLab",
            "role": "Founder of CodeIgniter"
        },
        {
            "name": "B.C. Institute of Technology",
            "role": "Manager and Maintainer of CodeIgniter"
        },
        {
            "name": "",
            "homepage": "https://github.com/ngthucdotcom/ci-core/contributors",
            "role": "Contributor"
        }
    ],
    "require": {
  	    "php": ">=5.3.7",
        "codeigniter/framework": "^3.1",
        "vlucas/phpdotenv": "^4.0"
    },
    "autoload": {
        "files": [
            "application/config/autoload.php",
            "application/config/config.php",
            "application/config/database.php",
            "application/config/routes.php",
            "application/core/MY_Controller.php",
            "application/core/MY_Model.php",
            "application/libraries/Env.php",
            ".editorconfig",
            ".gitignore",
            ".htaccess",
            "[.]env",
            "index.php",
            "LICENSE.txt"
        ],
        "exclude-from-classmap": [
            "README.md", 
            "composer.json"
        ]
    },
    "archive": {
        "exclude": [
            "README.md", 
            "composer.json"
        ]
    }
}
